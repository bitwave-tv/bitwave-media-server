{
    "name": "live",
    "jsondb": "db/v1",
    "auth": {
        "username": "admin",
        "password": "password",
        "token": ""
    },
    "nginx": {
        "command": "/usr/local/nginx/sbin/nginx",
        "args": [
            "-c",
            "/bms-nginx-server/src/conf/nginx.conf"
        ],
        "args_ssl": [
            "-c",
            "/bms-nginx-server/src/conf/nginx_ssl.conf"
        ],
        "streaming": {
            "ip": "127.0.0.1",
            "rtmp_port": "1935",
            "rtmp_hls_path": "/hls/",
            "http_port": "8080",
            "http_health_path": "/ping"
        }
    },
    "envVars": [
        {
            "name": "BMS_NODEJS_PORT",
            "alias": [
                "NODEJS_PORT"
            ],
            "type": "int",
            "defaultValue": "3000",
            "required": false,
            "description": "Webserver port of application."
        },
        {
            "name": "BMS_NODEJS_ENV",
            "alias": [
                "NODE_ENV"
            ],
            "type": "string",
            "defaultValue": "prod",
            "required": false,
            "description": "Node.js Environment ('dev' or 'prod')."
        },
        {
            "name": "BMS_LOGLEVEL",
            "alias": [
                "LOGGER_LEVEL"
            ],
            "type": "int",
            "defaultValue": "3",
            "required": false,
            "description": "Logging level (0=no logging, 1=ERROR, 2=WARN, 3=INFO, 4=DEBUG)."
        },
        {
            "name": "BMS_TIMEZONE",
            "alias": [
                "TIMEZONE"
            ],
            "type": "string",
            "defaultValue": "America/Los_Angeles",
            "required": false,
            "description": "Set the timezone. Accepts Olson timezone IDs."
        },
        {
            "name": "BMS_DEBUG",
            "alias": [],
            "type": "bool",
            "defaultValue": false,
            "required": false,
            "description": "Enables debug reporting."
        }
    ]
}
